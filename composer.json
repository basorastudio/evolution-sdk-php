{
  "name": "evolution/sdk-php",
  "description": "SDK PHP para consumir Evolution API v2",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "EvoApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EvoApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  }
}